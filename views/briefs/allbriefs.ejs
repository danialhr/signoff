  <section class="proposalsview">
    <div class="container">
      <h2><i>Browse</i> Briefs</h2>
        <button type="button" class="sec1_6_block_btn" onclick="location.href='/briefs/create';">Create A Brief</button>
    <div class="flex">
          <% listed_briefs.forEach(function(index) { %>
					<div class="proposalsview_block" style="background-image:url(/img/proposalsview_img1.jpg);">
						<div class="title"><a href="/briefs/<%=index._id%>"><%= index.briefTitle %></a></div>
						<div class="text"><%= index.oneLiner %></div>
						<br>
						<div class="author">
							<img src="/img/proposalsview_author1.jpg" alt="" />
							<%= index.briefCreator %>
						</div>
						<div class="btn_holder">
							<div class="time"><i><%= index.dueDate %></i></div>
              <a href='/briefs/<%=index._id%>/edit'><button type="button" class="sec3_5_btn">Update</button></a>
						</div>
					</div>
			<% }) %>
      	</div>
